{
  "compilerOptions": {
    "module": "node16",
    "target": "es2022",
    "moduleResolution": "Node16",
    "strict": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true
  },
  "include": ["source/**/*.ts"],
  "exclude": ["node_modules"]
}
